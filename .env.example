# ============================================
# Morning Bot 환경변수 설정
# ============================================

# 데이터베이스 (로컬: SQLite, 프로덕션: PostgreSQL)
# 로컬 개발용
DB_URL=sqlite:///./morning_bot.db
# Render PostgreSQL (프로덕션)
# DB_URL=postgresql://user:password@host:5432/morning_bot_db

# ============================================
# API 키
# ============================================

# 네이버 뉴스 API (https://developers.naver.com/apps/)
NAVER_CLIENT_ID=your_naver_client_id_here
NAVER_CLIENT_SECRET=your_naver_client_secret_here

# 환율 API - UniRate (https://unirateapi.com/) - 선택사항
UNIRATE_API_KEY=your_unirate_api_key_here

# 금속 가격 API - MetalpriceAPI (https://metalpriceapi.com/) - 선택사항
METALPRICE_API_KEY=your_metalprice_api_key_here

# 금속 가격 API - Metals.Dev (https://metals.dev/)
METALSDEV_API_KEY=your_metalsdev_api_key_here

# ============================================
# 텔레그램 봇
# ============================================

# 텔레그램 봇 토큰 (BotFather에서 발급)
TELEGRAM_TOKEN=your_telegram_bot_token_here

# 로또 관리자 Chat ID (선택사항)
LOTTO_ADMIN_CHAT_ID=your_chat_id_here

# ============================================
# 서버 설정
# ============================================

# FastAPI 백엔드 URL
BACKEND_BASE_URL=http://localhost:8000

# Cron API 인증 시크릿 (cron-job.org에서 사용)
CRON_SECRET=your_random_secret_here

# ============================================
# Lineage price watcher
# ============================================
LINEAGE_ENABLED=0
LINEAGE_SCHEDULE_MINUTES=30
LINEAGE_MIN_AMOUNT=1000000
LINEAGE_OUTLIER_FACTOR=2.0

# ============================================
# AI API (선택사항)
# ============================================

OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here
